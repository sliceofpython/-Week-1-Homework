import random
n = random.randint(1,20)
n_guess = 0
guess = ''
while guess != n:
    print('Guess the number.')
    guess = int(input())
    if guess != n:
        print('You are off by ' + str(n - guess) + '.'
        n_guess += 1
print('Correct. You guessed it in ' + str(n_guess) + ' attempts.')
            
