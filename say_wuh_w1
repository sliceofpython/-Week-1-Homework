import random
num = random.randint(1,20)
chance = 1

print('I\'m thinking of a number from 1-20.\nYou have 6 tries to guess the number.')
print(num) # for testing purposes
guess = int(input())

while guess != num:
    if guess < 1:
        print('Between 1-20, dummy.')
        guess = int(input())
    elif guess > 20:
        print('Between 1-20, dummy.')
        guess = int(input())
    elif chance >= 6:
        print('GAME OVER. YOU LOSE. The correct number was ' + str(num) + '.')
        break
    elif guess < num:
        rangeLow = int(num) - int(guess)
        if int(rangeLow) >= 5:
            print('ICE COLD.')
        elif int(rangeLow) >= 2:
            print('WARM.')
        else:
            print('HOT HOT HOT.')
        print('Too low. Guess again.')
        guess = int(input())
        chance += 1
    elif guess > num:
        rangeHigh = int(guess) - int(num)
        if rangeHigh >= 5:
            print('ICE COLD.')
        elif rangeHigh >= 2:
            print('WARM.')
        else:
            print('HOT HOT HOT.')
        print('Too high. Guess again.')
        guess = int(input())
        chance += 1

while guess == num:
    if chance == 1:
        print('Right on the first try!')
        break
    if chance > 1:
        print('YOU WON IN ' + str(chance) + ' TRIES!')
        break
