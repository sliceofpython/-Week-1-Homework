import random
num = random.randint(1,20)
chance = 4

print('I\'m thinking of a number from 1-20.\nYou have 5 tries to guess the number.')
guess = int(input())

while guess != num:
    if guess < 1:
        print('Between 1-20, dummy.')
        guess = int(input())
    elif guess > 20:
        print('Between 1-20, dummy.')
        guess = int(input())
    elif chance == 0:
        print('GAME OVER. YOU LOSE. The correct number was ' + str(num) + '.')
        break
    
    elif guess < num:
        rangeLow = int(num) - int(guess)
        if int(rangeLow) >= 5:
            print('ICE COLD.')
        elif int(rangeLow) >= 2:
            print('WARM.')
        else:
            print('HOT HOT HOT!')

        if chance == 1:
            print('Go higher. This is your LAST CHANCE.')
        else:
            print('Go higher. You have ' + str(chance) + ' tries remaining.')
        guess = int(input())
        chance -= 1
    
    elif guess > num:
        rangeHigh = int(guess) - int(num)
        if rangeHigh >= 5:
            print('ICE COLD.')
        elif rangeHigh >= 2:
            print('WARM.')
        else:
            print('HOT HOT HOT.')

        if chance == 1:
            print('Go lower. This is your LAST CHANCE.')
        else:
            print('Go lower. You have ' + str(chance) + ' tries remaining.')
        guess = int(input())
        chance -= 1

while guess == num:
    if chance == 4:
        print('Right on the first try!')
        break
    elif chance < 4:
        print('YOU WON IN ' + str(5 - chance) + ' TRIES!')
        break
